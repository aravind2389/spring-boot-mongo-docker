pipeline {
    agent any
    parameters{
        choice(name: 'CHOICE', choices: ['master', 'develop', ], description: 'select the branch')
    }
    tools{
        maven 'Maven'   
    }
    
    stages{
        stage('Git Checkout'){
            steps{
                git credentialsId: 'github_creds', url: 'https://github.com/aravind2389/spring-boot-mongo-docker'
            }
        }
        
        stage('Maven Build'){
            steps{
                sh 'mvn --version'
                sh 'mvn -B clean package '
            }
        }

        stage('Building docker image'){
            steps{
                sh 'pwd'
                sh 'docker build -t aravind2389/spring-boot-mongos .'
            }
        }
    }
}
